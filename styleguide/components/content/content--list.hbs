<div class="content content--sidebar">
    <div class="content__head">
        <div class="content__title">Finance</div>
        <div class="content__actions">
            <button class="btn btn--outline  btn--small">
                <span class="fa fa-columns"></span>
            </button>
            <button class="btn btn--outline  btn--small">
                <span class="fa fa-table"></span>
            </button>
            <button class="btn btn--outline  btn--small">
                <span class="fa fa-list"></span>
            </button>
        </div>
    </div>
    {{> @content-toolbar }}
    <div class="content__body">
        <div class="content__list">
            {{> @table--sticky }}
        </div>
        <div class="content__sidebar">
            <form action="" class="form--animate">
                <fieldset>
                    <div class="form__legend">
                        Filter
                        <button type="button" class="btn btn--link btn--small toggle-sidebar">
                            <span class="fa fa-times"></span>
                        </button>
                    </div>
                    <div class="form__row">
                        <div class="form__group">
                            <label class="form__label">Job number</label>
                            <div class="form__control form__control--input">
                                <input type="text" name="first_name" placeholder="Frank Green">
                            </div>
                            <div class="form__help"></div>
                        </div>
                    </div>
                    <div class="form__row">
                        <div class="form__group">
                            <label class="form__label">Status</label>
                            <div class="form__control form__control--select">
                                <select class="form__select">
                                    <option class=""></option>
                                    <option class="A">Active</option>
                                    <option class="B">Archived</option>
                                    <option class="C">Pending</option>
                                </select>
                            </div>
                            <div class="form__help"></div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="content__foot">
        {{> @pagination }}
        <div class="content__actions">
            <button class="btn btn--outline  btn--small">
                <span class="fa fa-file-alt"></span>
                CSV
            </button>
            <button class="btn btn--outline  btn--small">
                <span class="fa fa-file-pdf"></span>
                PDF
            </button>
        </div>
    </div>
</div>
<script>
    var toggleSidebarBtns = document.querySelectorAll('.toggle-sidebar')
    var content = document.querySelector('.content')
    toggleSidebarBtns.forEach(function(elm) {
        elm.addEventListener('click', function() {
            if (content.classList.contains('content--sidebar')) {
                content.classList.remove('content--sidebar')
            } else {
                content.classList.add('content--sidebar')
            }
        })
    })

</script>

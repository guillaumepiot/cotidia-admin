<form action="" method="post" class="form form--animate" enctype="">
    {{> @content-head-title}}
    <div class="content__body">
        <div class="content__inner">
            <fieldset>
                <legend>Member details</legend>
                <div class="form__row">
                    {{ render '@text' }}
                    {{ render '@text' }}
                </div>
                <div class="form__row">
                    {{ render '@select' }}
                </div>
                <div class="form__row">
                    {{ render '@text' }}
                </div>
                <div class="form__row">
                    {{ render '@text' }}
                </div>
                <div class="form__row">
                    {{ render '@text--textarea' }}

                </div>
                <div class="form__row">
                    {{ render '@text' }}
                    {{ render '@text' }}
                </div>
                <div class="form__row">
                    <div class="form__group">
                        <div class="form__control">
                            <label for="id_active" class="form__label"><input type=
                            "checkbox" name="active" id="id_active" checked="checked" />
                            Active</label>
                        </div>
                        <div class="form__help"></div>
                    </div>
                </div>
                <div class="fieldset-actions">
                    <a href="" class="btn btn--small btn--change">Edit profile</a>
                </div>
            </fieldset>

            <fieldset class="table-view">
                <legend>URLs</legend>
                <table class="table table--clickable table--admin-mobile-view">
                    <thead>
                        <tr>
                            <th>Network</th>
                            <th>URL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>LinkedIn</td>
                            <td><a href="#" target="_blank">https://www.linkedin.com/in/firstname-surname</a></td>
                        </tr>
                        <tr>
                            <td colspan="2"><a href="#" class="btn btn--create btn--small">Add URL</a></td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
    {{> @content-foot-save}}
</form>
